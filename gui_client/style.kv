<CreateNewGroupScreen>: 
    BoxLayout:
        orientation:'vertical'
        RelativeLayout:
            size_hint_y:0.05
            MDIconButton:
                icon: 'arrow-left'
                icon_color: 1,1,1,1
                pos_hint: {'top': .99, 'x': 0.01}
                on_release:root.manager.current = 'dashboard'
            Label:
                text: 'Select an Image for Group'
                pos_hint: {'top': 1, 'center_x': .5}
                bold:True
                size_hint_y: None
                font_size:dp(28)
                font_name:"fonts/Lato-Bold.ttf"
                height: self.texture_size[1] + dp(20)                  
        RelativeLayout:
            # pos_hint:{'center_y':0.5}
            EditableImageWidget:
                pos_hint: {'center_x': 0.5, 'top': 0.24}
        RelativeLayout:
            MDTextField:
                id:group_name
                size_hint_x:None
                color_mode:'accent'
                width:min(0.8* self.parent.width, dp(700))
                pos_hint:{'center_x':0.5}
                hint_text:'Give a Group Name'
                mode:'round'
                max_text_length:15
        RelativeLayout:
            MDFlatButton:
                text:'Select Participants'
                text_color:(0,0,0)
                pos_hint:{'center_x':0.5, 'center_y': 0.5 }
                on_release:root.show_bottom_sheet(root)

<ListItemWithCheckbox>:

    IconLeftWidget:
        icon: root.icon

    RightCheckbox:
        on_active: root.on_checkbox_active(self, self.active, root.text)

<ConversationBottomSheetContent>:
    orientation: "vertical"
    size_hint_y: None
    height: "400dp"

    MDTopAppBar:
        title: ' Participants'
        pos_hint: {"top": 1}
        elevation: 4

    MDScrollView:
        BoxLayout:
            orientation:'vertical'
            MDScrollView:
                MDList:
                    id:convo_members

            BoxLayout:
                size_hint_y: None
                height: dp(56)
                padding:dp(10)
                Widget:
                    size_hint_x:0.5

                MDFloatingActionButton:
                    icon:'arrow-right'
                    size_hint_x: None
                    width: dp(100)
                    on_press:root.create_group()

